include rich-checkbox-button
include ../label-primary/label-primary

mixin richCheckboxButtonGroup(title)
  .rich-checkbox-button-group
    +labelPrimary(title)
    .rich-checkbox-button-group__container
      .rich-checkbox-button-group__item
        +richCheckboxButton('Широкий коридор', 'Ширина коридоров в номере не менее 91 см.', 'wide-corridor', false)
      .rich-checkbox-button-group__item
        +richCheckboxButton('Помощник для инвалидов', 'На 1 этаже вас встретит специалист  и проводит до номера.', 'accessibility', false)
