mixin customSelect(label, text, ariaLabel)
  .custom-select
    label.custom-select__label
      span.custom-select__header
        span.custom-text-field__label-primary=label
      span.custom-select__wrapper
        button.custom-select__button(type='button' aria-label=ariaLabel)
          span.custom-select__text=text
          span.custom-select__icon
            include expand_more.svg
